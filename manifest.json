{
  "manifest_version": 3,
  "version": "1.0.0.0",
  "name": "Tab Scribe",
  "description": "Save tabs effortlessly, take notes seamlessly!",
  "action": {
    "default_popup": "index.html",
    "default_title": "Tab Scribe"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["tabs"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
